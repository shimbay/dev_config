#! /usr/bin/zsh

set -e

name=""
while getopts "n:" option; do
  case $option in
    n) name=$OPTARG ;;
  esac
done

if test -z "${name}"; then
  echo "name should be set by -n"
  exit 1
fi

WS=$(realpath ${0:a:h}/..)

conda create --name ${name}

conda activate ${name}
mkdir -p ${CONDA_PREFIX}/etc/conda/activate.d
cp ${WS}/miniconda/activate-env.sh ${CONDA_PREFIX}/etc/conda/activate.d
